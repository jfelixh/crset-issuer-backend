{
  "compilerOptions": {
    "target": "es2018",
    "module": "CommonJS",
    "moduleDetection": "auto",
    "baseUrl": "./",
    "paths": {
      "@/utils/*": ["src/utils/*"],
      "@/models/*": ["src/models/*"],
      "@/services/*": ["src/services/*"],
      "@/controllers/*": ["src/controllers/*"],
      "@/routes/*": ["src/routes/*"],
      "@/db/*": ["src/db/*"],
      "@/data/*": ["src/data/*"]
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
